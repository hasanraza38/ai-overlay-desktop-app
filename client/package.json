{
  "name": "ai-overlay",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "src/electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "lint": "eslint .",
    "dist": "electron-builder",
    "preview": "npm run build && vite preview",
    "start": "electron .",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder -wml"
  },
  "dependencies": {
    "@react-oauth/google": "^0.12.2",
    "@tailwindcss/vite": "^4.1.13",
    "axios": "^1.12.2",
    "electron-is-dev": "^3.0.1",
    "electronmon": "^2.0.3",
    "framer-motion": "^12.23.18",
    "google-client-api": "^1.0.4",
    "keytar": "^7.9.0",
    "lucide-react": "^0.544.0",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.8.2",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.2",
    "concurrently": "^9.2.0",
    "electron": "^37.5.1",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "electronmon": "^2.0.3",
    "eslint": "^9.11.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "node-addon-api": "^8.5.0",
    "vite": "^6.3.5",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.myapp.desktop",
    "productName": "AI Overlay",
    "directories": {
      "output": "release-builds",
      "buildResources": "build"
    },
    "files": [
      "dist-react/**/*",
      "src/electron/**/*",
      "package.json",
      "build/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}